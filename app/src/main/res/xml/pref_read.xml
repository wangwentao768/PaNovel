<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <cc.aoeiuv020.panovel.settings.IntEditTextPreference
        android:capitalize="words"
        android:defaultValue="-1"
        android:inputType="number|numberSigned"
        android:key="brightness"
        android:maxLines="1"
        android:summary="-1为跟随系统，"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/brightness" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="keepScreenOn"
        android:title="@string/keep_screen_on" />

    <cc.aoeiuv020.panovel.settings.IntEditTextPreference
        android:capitalize="words"
        android:inputType="number"
        android:defaultValue="60"
        android:key="autoSaveReadStatus"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/auto_save_read_status_second" />

    <cc.aoeiuv020.panovel.settings.IntEditTextPreference
        android:capitalize="words"
        android:defaultValue="300"
        android:inputType="number"
        android:key="fullScreenDelay"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/full_screen_delay" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="backPressOutOfFullScreen"
        android:title="@string/back_press_out_of_fullScreen" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="volumeKeyScroll"
        android:title="@string/volume_key_scroll" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="fullScreenClickNextPage"
        android:title="@string/full_screen_click_next_page" />

    <cc.aoeiuv020.panovel.settings.FloatEditTextPreference
        android:capitalize="words"
        android:defaultValue="0.5"
        android:inputType="numberDecimal"
        android:key="centerPercent"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/center_percent" />

    <cc.aoeiuv020.panovel.settings.EditTextPreference
        android:inputType="text"
        android:defaultValue="HH:mm"
        android:key="dateFormat"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/date_format" />

    <cc.aoeiuv020.panovel.settings.IntEditTextPreference
        android:capitalize="words"
        android:defaultValue="60"
        android:inputType="number"
        android:key="autoRefreshInterval"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/auto_refresh_interval" />

    <cc.aoeiuv020.panovel.settings.IntEditTextPreference
        android:capitalize="words"
        android:defaultValue="26"
        android:inputType="number"
        android:key="textSize"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/text_size" />

    <cc.aoeiuv020.panovel.settings.IntEditTextPreference
        android:capitalize="words"
        android:inputType="number"
        android:defaultValue="12"
        android:key="messageSize"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/message_size" />

    <cc.aoeiuv020.panovel.settings.ListPreference
        android:entries="@array/animation_names"
        android:defaultValue="SIMULATION"
        android:entryValues="@array/animation_values"
        android:key="animationMode"
        android:title="@string/animation" />

    <cc.aoeiuv020.panovel.settings.FloatEditTextPreference
        android:capitalize="words"
        android:defaultValue="0.8"
        android:inputType="numberDecimal"
        android:key="animationSpeed"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/animation_speed" />

    <cc.aoeiuv020.panovel.settings.IntEditTextPreference
        android:capitalize="words"
        android:inputType="number"
        android:defaultValue="13"
        android:key="lineSpacing"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/line_spacing" />

    <cc.aoeiuv020.panovel.settings.IntEditTextPreference
        android:capitalize="words"
        android:defaultValue="0"
        android:inputType="number"
        android:key="paragraphSpacing"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/paragraph_spacing" />

    <cc.aoeiuv020.panovel.settings.ColorPickerPreference
        android:defaultValue="0xffffe3aa"
        android:title="@string/background_color"
        android:key="backgroundColor"
        app:alphaSlider="true"
        app:lightnessSlider="true"
        app:wheelType="CIRCLE" />

    <cc.aoeiuv020.panovel.settings.ColorPickerPreference
        android:defaultValue="0xff000000"
        android:key="textColor"
        android:title="@string/text_color"
        app:alphaSlider="true"
        app:lightnessSlider="true"
        app:wheelType="CIRCLE" />

</PreferenceScreen>